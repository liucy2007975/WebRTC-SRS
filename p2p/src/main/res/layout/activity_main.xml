<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/etRoomId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入房间号"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/surfaceViewLocal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toTopOf="@id/controlPanel"
            app:layout_constraintEnd_toStartOf="@id/surfaceViewRemote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etRoomId" />

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/surfaceViewRemote"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toTopOf="@id/controlPanel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/surfaceViewLocal"
            app:layout_constraintTop_toBottomOf="@id/etRoomId" />

        <!-- 控制面板 -->
        <LinearLayout
            android:id="@+id/controlPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@id/btnAdd">

            <!-- WHIP/WHEP 双向通话控制 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WHIP/WHEP 双向通话"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnStartCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始双向通话"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnEndCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束通话"
                    android:enabled="false"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnSwitchCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="切换摄像头"
                    android:enabled="false"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnToggleMute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="静音"
                    android:enabled="false"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnToggleCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭摄像头"
                    android:enabled="false" />

            </LinearLayout>

            <!-- 原有的SRS RTC控制 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SRS RTC 单向推流"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入房间"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>